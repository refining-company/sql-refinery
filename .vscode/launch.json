{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "VS Code and Server: debug",
      "configurations": ["Server: attach debug (hidden)", "VS Code: debug (hidden)"],
      "presentation": { "order": 1 }
    }
  ],
  "configurations": [
    {
      "name": "VS Code: debug (hidden)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/frontend-vscode",
        "--folder-uri=${workspaceFolder}/backend/tests/inputs/codebase/",
        "file:${workspaceFolder}/backend/tests/inputs/editor.sql"
      ],
      "outFiles": ["${workspaceFolder}/frontend-vscode/dist/**/*.js"],
      "sourceMaps": true,
      "preLaunchTask": "${defaultBuildTask}",
      "presentation": { "hidden": true }
    },
    {
      "name": "Server: attach debug (hidden)",
      "type": "debugpy",
      "request": "attach",
      "listen": { "host": "localhost", "port": 5678 },
      "presentation": { "hidden": true },
      "justMyCode": false
    },
    {
      "name": "Server: standalone debug",
      "type": "debugpy",
      "request": "launch",
      "module": "src.server",
      "cwd": "${workspaceFolder}/backend",
      "args": [
        "--codebase-path",
        "${workspaceFolder}/backend/tests/inputs/codebase/",
        "--analyse-path",
        "${workspaceFolder}/backend/tests/inputs/editor.sql"
      ],
      "console": "integratedTerminal"
    },

    {
      "name": "Server: create tests",
      "type": "debugpy",
      "request": "launch",
      "module": "tests.test_pipeline",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal"
    }
  ]
}
