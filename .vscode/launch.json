{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "VS Code and Server: debug",
      "configurations": [
        "VS Code: debug (hidden)",
        "Server: attach debug (hidden)"
      ],
      "stopAll": true,
      "presentation": {
        "order": 1
      }
    }
  ],
  "configurations": [
    {
      "name": "VS Code: debug (hidden)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/frontend-vscode"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "${defaultBuildTask}",
      "cwd": "${workspaceFolder}/frontend-vscode",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Server: attach debug (hidden)",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/backend",
          "remoteRoot": "${workspaceFolder}/backend"
        }
      ],
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Server: standalone debug",
      "type": "debugpy",
      "request": "launch",
      "module": "src.server",
      "cwd": "${workspaceFolder}/backend",
      "args": ["./tests/inputs/codebase/", "./tests/inputs/editor.sql"],
      "console": "integratedTerminal"
    },
    {
      "name": "Server: create tests",
      "type": "debugpy",
      "request": "launch",
      "module": "tests.update",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal"
    }
  ]
}
