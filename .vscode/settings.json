{
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["-q", "--tb=short"],
  "black-formatter.args": ["-l", "120"],
  "[json]": {
    "editor.defaultFormatter": null
  },
  "files.exclude": {
    "**/.conda": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.venv": true,
    "**/node_modules": true,
    "out": false,
    "dist": false
  },
  "search.exclude": {
    "out": true,
    "dist": true
  },
  "typescript.tsc.autoDetect": "off"
}
