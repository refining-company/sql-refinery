// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "dependsOn": ["npm: watch:rebuild", "npm: watch:tstypes"],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch-tests",
      "dependsOn": ["npm: watch", "npm: watch-tests"]
    },
    {
      "label": "npm: watch:rebuild",
      "type": "npm",
      "script": "watch:rebuild",
      "group": "build",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "presentation": {
        "group": "watch",
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend-vscode"
      }
    },
    {
      "label": "npm: watch:tstypes",
      "type": "npm",
      "script": "watch:tstypes",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "group": "watch",
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend-vscode"
      }
    },
    {
      "label": "npm: watch-tests",
      "type": "npm",
      "script": "watch-tests",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "group": "watch",
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend-vscode"
      }
    }
  ]
}
