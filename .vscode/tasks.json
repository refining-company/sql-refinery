{
  "version": "2.0.0",
  "tasks": [
    // Frontend build tasks
    {
      "label": "watch",
      "dependsOn": ["npm: watch:rebuild", "npm: watch:tstypes"],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "npm: watch:rebuild",
      "type": "npm",
      "script": "watch:rebuild",
      "path": "frontend-vscode",
      "group": "build",
      "problemMatcher": "$ts-esbuild-watch",
      "isBackground": true,
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    },
    {
      "label": "npm: watch:tstypes",
      "type": "npm",
      "script": "watch:tstypes",
      "path": "frontend-vscode",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    },

    // Frontend test tasks
    {
      "label": "npm: watch-tests",
      "type": "npm",
      "script": "watch-tests",
      "path": "frontend-vscode",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    },
    {
      "label": "npm: compile-tests",
      "type": "npm",
      "script": "compile-tests",
      "path": "frontend-vscode"
    }
  ]
}
